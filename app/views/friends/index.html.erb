<p style="color: green"><%= notice %></p>


<table class='table table-striped table-bordered table-hover'>
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>  
  </thead>

  <tbody>
    <% @friends.each do |friend|%>
      <tr>
        <td><%= friend.Name%></td>
        <td><%= friend.Email%></td>
        <td><%= friend.Gender%></td>
        <td><%= friend.Action%></td>
        <td><%= link_to 'Show',friend%></td>
        <td><%= link_to 'Edit', edit_friend_path(friend)%></td>
        <td><%= link_to 'Delete',friend,data:{turbo_method: :delete,
    turbo_confirm: 'Are you sure?'}, class: "btn btn-outline-danger btn-sm"%></td>       
      </tr>
    <% end %>   
  </tbody>
</table> 
<br>    

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
